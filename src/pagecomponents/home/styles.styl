@require "../../style/base.styl"

.home.inverse
  clip-path polygon(17.81% 20.16%, 77.45% 10.16%, 69.00% 31.18%, 82.1% 64.57%, 60.35% 79.84%, 42.08% 95.92%, 47.41% 101%, 10.62% 101%, 42.08% 95.92%, 60.35% 79.84%, 31.43% 54.44%, 82.1% 64.57%, 69.00% 31.18%)

  .home__statue
    filter invert(1)

.home__head
  display grid
  grid-template-areas "statue" "headline" "gap" "arrow"
  grid-template-rows 7fr 1fr 2fr 1fr
  justify-content center
  align-items center
  height 100vh
  width 100vw
  margin 0 auto

  +desktop()
    grid-template-areas "statue headline" "_ _" "arrow arrow"
    grid-template-rows 10fr 3fr 1fr
    width 70vw

.home__statue
  position relative
  grid-area statue
  width 350px
  max-width 46vw
  align-self end

  +desktop()
    right -50px

.home__pygmalionpolymorph
  grid-area headline
  cursor default
  text-transform uppercase
  font-size 1.5rem
  font-weight 300
  letter-spacing .7em
  text-align center

  +desktop()
    font-size 3rem

  span
    display block


.home__pygmalion
  font-size 1em

.home__polymorph
  font-size .6em

.home__nav
  display flex
  flex-flow column nowrap
  justify-content space-between
  align-items center
  height 150vh
  margin 30vh auto 20vh
  position relative
  width 100vw
  max-width 1280px

  a
    text-decoration none
    text-align center
    letter-spacing .8em

.home__scrolldown
  align-self flex-start
  justify-self center
  grid-area arrow

